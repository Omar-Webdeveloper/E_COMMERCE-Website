<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Admin2.css" asp-append-version="true" />
</head>
<body>
    <div class="sidebar">
        <h3>Admin Panel</h3>
        <a asp-area="" asp-controller="User" asp-action="All_users">All Users</a>
        <a asp-area="" asp-controller="User" asp-action="Create">New User</a>
        <a asp-area="" asp-controller="Admin" asp-action="Index">Admin_profile</a>
        <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
        <a asp-area="" asp-controller="User" asp-action="Logout">Logout</a>
    </div>
    <div class="main-content">
        <h2>Dashboard</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card p-3">
                    <h4>Total Users</h4>
                    <p>1,230</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3">
                    <h4>Revenue</h4>
                    <p>$4,500</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card p-3">
                    <h4>Issues</h4>
                    <p>12 Pending</p>
                </div>
            </div>

        </div>
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2025 - ASP_TASK_2 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
    </div>



    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>