@model IEnumerable<E_COMMERCE_Website.Models.Product>

@{
    ViewData["Title"] = "Index";
    int cardCount = 0;
}
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<h1>All Products</h1>

<p>
    <a asp-action="Create">New Product</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Product Cards</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            @foreach (var item in Model)
            {
                if (cardCount % 3 == 0 && cardCount != 0)
                {
                    <tr></tr>
                }
                <td>
                    <div class="card" style="width: 18rem;">
                <img src="@Html.DisplayFor(modelItem => item.Image)" class="card-img-top" alt="..." style="width:300px;height:200px;" >
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                    <p class="card-text"><b> @Html.DisplayFor(modelItem => item.Price)</b></p>
                            <a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-primary" style="background-color:#ffc107;" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-primary" style="background:#dc3545;" onclick="return confirm('Are you sure you want to delete this record?')" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </div>
                </td>
                cardCount++;
            }        
            </tr>
    </tbody>
</table>