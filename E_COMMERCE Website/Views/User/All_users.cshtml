@model IEnumerable<E_COMMERCE_Website.Models.User>
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<h1>All Users</h1>

<table class="table">
    <thead>
        <tr>
            
            <th>Name</th>
            <th>Email</th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
            <!-- Add other columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
             
                <td>@user.Name</td>
                <td>@user.Email</td>
                <td><a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id">Edit</a></td>
                <td><a asp-controller="User" asp-action="Details" asp-route-id="@user.Id">Details</a></td>
                <td><a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id">Delete</a></td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="User" asp-action="Create">Create New User</a>
